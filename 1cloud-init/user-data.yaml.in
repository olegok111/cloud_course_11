#cloud-config
users:
  - name: okoyomovov
    ssh_authorized_keys:
      - SSHPUBKEY
ssh_pwauth: false
chpasswd:
  expire: false
  users:
    - name: okoyomovov
      password: 0000pw
      type: text
package_upgrade: true
packages:
  - nginx
runcmd:
  - systemctl enable nginx
  - systemctl start nginx
write_files:
  - path: /etc/nginx/sites-enabled.d/default.conf
    content: |
      server {
          listen 80;
          location / {
              root /data/www;
          }
      }
  - path: /data/www/index.html
    content: |
      <html>
      <head><title>Nginx in cloud-init</title></head>
      <body><p>Nginx is running in VM!</p></body>
      </html>
